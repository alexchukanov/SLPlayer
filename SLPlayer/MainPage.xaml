                                    DeliveryMethod="AdaptiveStreaming">
                    <Media:PlaylistItem.S3DProperties>
                        <plugins3d:S3DProperties S3DEyePriority="LeftFirst" S3DFormat="TopAndBottom" S3DLeftEyePAR="2.0" S3DRightEyePAR="2.0" />
